<h6>Dahsboard</h6>
<div class="divider"></div>
<img src="{{img}}" alt="profile page" class="profile-image">
<h4>welcome {{name}}</h4>
<p>here are your stories</p>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
            <td class=""><span class="dash-status">{{status}}</span></td>
            <td>
                <a class="btn btn-float" href="/stories/edit/{{_id}}"><i class="fas fa-edit"></i></a>

                <form action="stories/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            <td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet.</p>
{{/if}}